<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppAnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>
    <declare-styleable name="ShoppingView">
        <attr name="sv_bg_color" format="color" />
        <attr name="sv_text" format="string" />
        <attr name="sv_text_size" format="dimension" />
        <attr name="sv_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="CardView">
        <attr name="bgStartColor" format="color|reference"></attr>
        <attr name="bgEndColor" format="color|reference"></attr>
        <attr name="buyButtonColor" format="color|reference"></attr>
        <attr name="checkButtonColor" format="color|reference"></attr>

        <attr name="cardBgColor" format="color|reference"></attr>
        <attr name="bgPackColor" format="color|reference"></attr>
        <attr name="priceTextColor" format="color|reference"></attr>


        <attr name="cardGiftLogo" format="reference"></attr>
        <attr name="cardGiftTitle" format="string|reference"></attr>
        <attr name="cardGiftPrice" format="float|reference"></attr>
        <attr name="buttonByText" format="string|reference"></attr>

        <attr name="buttonCheckText" format="string|reference"></attr>

    </declare-styleable>

    <declare-styleable name="MovieRecorderView">
        <!-- 开始是否打开摄像头 -->
        <attr name="is_open_camera" format="boolean" />
        <!-- 一次拍摄最长时间 -->
        <attr name="record_max_time" format="integer"/>
        <!-- 视频分辨率宽度 -->
        <attr name="m_width" format="integer"/>
        <!-- 视频分辨率高度 -->
        <attr name="m_height" format="integer"/>
    </declare-styleable>
</resources>
