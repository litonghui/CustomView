<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.android.customview.view.GiftCardView
        android:id="@+id/gift_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        card:bgEndColor="#56abe4"
        card:bgPackColor="#36ab60"
        card:bgStartColor="#11cd6e"
        card:buyButtonColor="#56abe4"
        card:cardBgColor="#fff"
        card:cardGiftLogo="@mipmap/gift"
        card:cardGiftPrice="520"
        card:checkButtonColor="#00bb9c"
        android:layout_gravity="center"
        />
</LinearLayout>