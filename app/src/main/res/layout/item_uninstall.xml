<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alpha"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:background="#f5f5f5"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="#3291dc"
        android:textSize="13dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_below="@id/alpha"
        android:background="@drawable/item_highlight_bkg"
        android:paddingRight="34dp">

        <Button
            android:id="@+id/app_status_button"
            android:layout_width="59dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_stroke_blue"
            android:text="卸载"
            android:textColor="#3291dc"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/ic_app"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="34dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/app_status_button"
            android:layout_toRightOf="@id/ic_app"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/channel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="sogoumobile"
                android:textColor="#333333"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>