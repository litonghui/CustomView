<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:id="@+id/rl_switch_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:padding="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="接收新消息通知"
               android:textSize="16sp"
               android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_switch_open_notification"
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/open_icon"/>
            <ImageView
                android:id="@+id/iv_switch_close_notification"
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/close_icon"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada"/>
        <RelativeLayout
            android:id="@+id/rl_switch_speaker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声音打开"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_switch_open_sound"
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/open_icon"/>
            <ImageView
                android:id="@+id/iv_switch_close_sound"
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/close_icon"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada"/>
    </LinearLayout>

</LinearLayout>