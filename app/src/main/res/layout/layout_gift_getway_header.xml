<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ry_key"
        android:visibility="gone">

        <TextView
            android:id="@+id/app_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxEms="12"
            android:singleLine="true"
            android:text="礼包激活码：123456789685"
            android:textColor="#9D9D9D"
            android:textSize="12dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/key_copy"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:text="复制"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/app_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abc_action_bar_home_description"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_more_arrow_down"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3569人领取"
            android:layout_below="@+id/app_descrip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/07/31结束"
            android:layout_below="@+id/app_descrip"
            android:layout_toLeftOf="@+id/arrow_up"/>

        <ImageView
            android:id="@+id/arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_more_arrow_up"
            android:layout_below="@+id/app_descrip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</LinearLayout>